<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <kr.co.t_woori.good_donation_admin.utilities.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fillViewport="true"
        android:id="@+id/scroll_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="가입신청"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_border_primary_1dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_forward"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_border_primary_1dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="2"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_forward"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_primary"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="3"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="아이디"
                    android:gravity="center"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_corner_primary"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:id="@+id/id_edt"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="비밀번호"
                    android:gravity="center"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_corner_primary"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:id="@+id/pw_edt"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="비밀번호 확인"
                    android:gravity="center"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_corner_primary"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:id="@+id/pw_cfm_edt"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:text="비밀번호는 알파벳과 숫자(또는 특수문자)를 \n조합하여 6~20자리로 설정해주십시오."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:gravity="bottom"
                android:layout_below="@+id/container"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_primary_1dp"
                    android:layout_marginRight="10dp"
                    android:text="이전"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/back_btn"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_primary_1dp"
                    android:text="완료"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/done_btn"/>

            </LinearLayout>

        </RelativeLayout>

    </kr.co.t_woori.good_donation_admin.utilities.ScrollView>

</layout>